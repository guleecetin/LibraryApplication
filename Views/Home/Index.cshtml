    /* Hover Efekti ve Buton Animasyonu */
    .btn:hover {
        background-color: #ff1c6b;
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(255, 64, 129, 0.3);
    }

    img:hover {
        transform: scale(1.05);
    }
